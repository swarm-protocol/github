# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Nix files
[*.nix]
indent_size = 2

# Terraform files
[*.tf]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles use tabs
[Makefile]
indent_style = tab

# Git config files
[.gitattributes]
indent_style = tab

[.gitignore]
indent_style = space
